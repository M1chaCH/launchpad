---
import {initTranslations} from "../../i18n/utils";
const t = initTranslations(Astro.url);
---

<nav>
  <a href="#welcome" class="logo">
    <img src="/favicon.svg" alt="L" width="100%" height="100%"/>
  </a>
  <a href="#bible-app">{t("nav.bible.app")}</a>
  <a href="#bible-project">{t("nav.bible.project")}</a>
  <a href="#music">{t("nav.music")}</a>
  <a href="#series">{t("nav.series")}</a>
  <a href="#study">{t("nav.study")}</a>
  <a href="#church">{t("nav.church")}</a>
</nav>

<style>
  nav {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-evenly;
    align-items: center;

    width: 100%;
    height: 120px;
    box-sizing: border-box;

    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: white;
  }

  .logo {
    border-radius: 50%;

    height: 80%;
    width: auto;
    aspect-ratio: 1/1;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo span {
    font-weight: bold;
    font-size: var(--general-font-size);
  }

  a {
    color: black;
    font-weight: bold;
    font-size: var(--general-font-size);

    text-decoration: none;
  }

  /* TODO GSAP text effect, rainbow through every letter and change size of every letter, like a wave */
  a:hover {
    text-decoration: underline;
    cursor: pointer;
  }
</style>

<script>
  import {gsap} from "gsap";
    import {isLarge} from "../../scripts/global";

    if (isLarge()) {
      // FYI: breaks when resizing the window (ScrollTrigger position gets moved away, timing feels random)
      gsap.to("nav", {
        height: 55,
        scrollTrigger: {
          id: "nav-resize-desktop",
          trigger: "nav",
          start: "top top",
          end: "bottom top",
          scrub: 0.5,
          markers: false,
          },
        });
      }
</script>
