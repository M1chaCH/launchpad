---
import {getLangFromUrl, initTranslations} from "../../i18n/utils";
import VerseOfTheDayFallback from "./VerseOfTheDayFallback.astro";
import VerseOfTheDayYouVersion from "./VerseOfTheDayYouVersion.astro";

const t = initTranslations(Astro.url);
---

<section id="bible-app">
  <div class="overview">
    <div class="heading">
      <h1><a href="https://www.bible.com/">{t("bible.app.title")}</a></h1>
      <p>{t("bible.app.description")}</p>
    </div>
    <div class="features-container">
      <h4>Features</h4>
      <div class="features">
        <span>✝️</span>
        <p>{t("bible.app.bullets.translations")}</p>

        <span>🔍</span>
        <p>{t("bible.app.bullets.search")}</p>

        <span>📝</span>
        <p>{t("bible.app.bullets.notes")}</p>

        <span>🔄</span>
        <p>{t("bible.app.bullets.plans")}</p>

        <span>🎧</span>
        <p>{t("bible.app.bullets.audio")}</p>
      </div>
    </div>
    <div class="visits">
      <a href="https://apps.apple.com/us/app/bible/id282935706" target="_blank">
        <img src="/app-store-badge-en.png" alt="AppStore Download"/>
      </a>
      <a href="https://play.google.com/store/apps/details?id=com.sirma.mobile.bible.android" target="_blank">
        <img src="/play-store-badge-en.png" alt="PlayStore Download"/>
      </a>
    </div>
  </div>
  <div class="verse-of-the-day">
    <VerseOfTheDayYouVersion server:defer language={getLangFromUrl(Astro.url)}>
      <VerseOfTheDayFallback slot="fallback"/>
    </VerseOfTheDayYouVersion>
  </div>
</section>

<style>
  section {
    display: flex;
    flex-flow: row wrap;
    align-content: center;
  }

  .overview, .verse-of-the-day {
    align-self: flex-start;
    flex: 1 1 600px;

    box-sizing: border-box;
    padding: var(--general-padding);
  }

  .heading p {
    max-width: 520px;
    text-align: justify;

    margin: 3rem 0 4rem 0;
  }

  .features-container {
    margin: 2rem 0;
  }

  .features {
    display: grid;
    grid-template-columns: 2.5rem auto;
    grid-auto-rows: 3.2rem;
    align-items: center;
    justify-items: start;

    margin: 0.5rem;
  }

  .features span {
    font-size: 1.3rem;
  }

  .visits {
    display: flex;
    flex-flow: row nowrap;
    width: 100%;
    max-width: 500px;
    gap: 12px;
    align-items: center;
    justify-content: space-evenly;

    margin: 4rem 0;
  }

  .visits a {
    height: 50px;
    flex: 1
  }

  .visits a img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
